<div class="col-xl-4 col-md-6 col-sm-8 col-10"
     style="margin: auto; background-color: #f8f8f8; border-radius: 6px; padding: 15px; box-shadow: 0px 0px 2px rgba(255, 255, 255, 0.1);">
  <%= form_with(model: post) do |form| %>
    <h1>New post</h1>

    <!-- Title Field -->
    <div>
      <% invalid_fields = post.errors.include?(:title) %>
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title, class: "form-control" %>
      <% if invalid_fields %>
        <div class="alert alert-danger">
          <%= post.errors.full_messages_for(:title).join(", ") %>
        </div>
      <% end %>
    </div>

    <!-- Description Field -->
    <div>
      <% invalid_fields = post.errors.include?(:description) %>
      <%= form.label :description, style: "display: block" %>
      <%= form.text_field :description, class: "form-control" %>
      <% if invalid_fields %>
        <div class="alert alert-danger">
          <%= post.errors.full_messages_for(:description).join(", ") %>
        </div>
      <% end %>
    </div>

    <!-- Keywords Field -->
    <div>
      <% invalid_fields = post.errors.include?(:keywords) %>
      <%= form.label :keywords, style: "display: block" %>
      <%= form.text_field :keywords, class: "form-control" %>
      <% if invalid_fields %>
        <div class="alert alert-danger">
          <%= post.errors.full_messages_for(:keywords).join(", ") %>
        </div>
      <% end %>
    </div>
    <!-- Image Field -->
    <%= form.file_field :images, multiple: true, class: "form-control" %>

    <!-- Submit Button -->
    <div>
      <%= form.submit class: "btn btn-primary col-12" %>
    </div>
  <% end %>
</div>